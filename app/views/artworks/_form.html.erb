<%= form_for @artwork, :html => {:multipart => true } do |f| %>
  <% if @artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artwork.errors.count, "error") %> prohibited this artwork from being saved:</h2>

      <ul>
      <% @artwork.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :genre %><br>
    <%= f.text_field :genre, :placeholder => 'Landscape'%>
  </div>

  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.text_field :category, :placeholder => 'Painting' %>
  </div>

  <div class="form-group">
    <%= f.label :medium %><br>
    <%= f.text_field :medium, :placeholder => 'Oil on canvas'%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
